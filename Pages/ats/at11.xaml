<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabalhoTaffeV2.Pages.at11"
             Title="Calcular Média de notas"
             BackgroundColor="White">
    <Border
        BackgroundColor="#480048" 
        StrokeShape="RoundRectangle 10,10, 10, 10"
        Padding="30"
        WidthRequest="390"
        HeightRequest="700">
        <StackLayout>
            <Label Text="Digite a primeira nota:" TextColor="White"/>
            <Entry x:Name="Nota1Entry" Keyboard="Numeric" TextColor="White"/>
            <Label Text="Digite a segunda nota:" TextColor="White"/>
            <Entry x:Name="Nota2Entry" Keyboard="Numeric" TextColor="White"/>
            <Label Text="Digite a terceira nota:" TextColor="White"/>
            <Entry x:Name="Nota3Entry" Keyboard="Numeric" TextColor="White"/>
            <Label Text="Digite a quarta nota:" TextColor="White"/>
            <Entry x:Name="Nota4Entry" Keyboard="Numeric" TextColor="White"/>
            <Button Text="Calcular Média" Clicked="CalcularMedia_Clicked" BackgroundColor="#300030" TextColor="White"/>
            <Label x:Name="ResultadoLabel" TextColor="White"/>
        </StackLayout>
    </Border>
</ContentPage>